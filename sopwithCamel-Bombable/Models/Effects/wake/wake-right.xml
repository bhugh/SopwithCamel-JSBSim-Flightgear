<?xml version="1.0"?>
<!-- right landing gear wheel; this is the wake for WATER landings -->
<PropertyList>

  <params>
   <drag>/environment/terrain-info/gear/unit[2]/wake-dust-factor</drag>
   <placer-width>.3</placer-width>
   <start-size>0.4</start-size>
   <end-size>1.1</end-size>      

   <start-red>0.841</start-red>                            <!-- foam white -->
   <start-green>0.905</start-green>
   <start-blue>0.940</start-blue>
   <start-alpha>0.5</start-alpha>
   
   <end-red>0.541</end-red>                            <!-- wave blue -->
   <end-green>0.605</end-green>
   <end-blue>0.640</end-blue>
   <end-alpha>0</end-alpha>
   
   <life-sec>20</life-sec>
   <mass-kg>.02</mass-kg>   
  </params>

  <particlesystem include="sponson.xml">
   <offsets>
 
        <x-m>  .762 </x-m>                                          <!-- right landing gear wheel -->
        <y-m>  .738124 </y-m>                                          
        <z-m>  -.8 </z-m>                                          
    
   </offsets>
  </particlesystem>

  <animation>
   <type>range</type>
   <min-m>0</min-m>
   <max-m>5000</max-m>
  </animation>

</PropertyList>
